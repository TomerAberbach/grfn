{
  "type": "module",
  "name": "grfn",
  "version": "0.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "description": "A tiny (~400B) utility that executes a dependency graph of async functions as concurrently as possible.",
  "keywords": [
    "graph",
    "dag",
    "dependency",
    "concurrently",
    "async",
    "function",
    "solver",
    "topological"
  ],
  "files": [
    "./dist"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./debug": "./dist/debug.js"
  },
  "homepage": "https://github.com/TomerAberbach/grfn",
  "repository": "TomerAberbach/grfn",
  "bugs": {
    "url": "https://github.com/TomerAberbach/grfn/issues"
  },
  "license": "Apache 2.0",
  "scripts": {
    "license": "addlicense $(git diff --name-only HEAD)",
    "lint:prettier:base": "prettier --loglevel silent --ignore-path .gitignore",
    "lint:prettier": "pnpm run lint:prettier:base -- --write .",
    "lint:eslint:base": "eslint --ext js --ignore-path .gitignore",
    "lint:eslint": "pnpm run lint:eslint:base -- --fix .",
    "lint": "run-s lint:*",
    "test": "ava",
    "coverage": "c8 pnpm run test",
    "build": "node build.js",
    "prepublishOnly": "run-s lint build"
  },
  "prettier": "@tomer/prettier-config",
  "eslintConfig": {
    "extends": "@tomer",
    "plugins": [
      "node"
    ],
    "rules": {
      "node/no-unsupported-features/es-builtins": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "build.js",
          "test.js"
        ],
        "rules": {
          "node/no-unsupported-features/es-builtins": "off",
          "node/no-unsupported-features/es-syntax": "off"
        }
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.js": [
      "addlicense",
      "pnpm run lint:prettier:base -- --write",
      "pnpm run lint:eslint:base -- --fix"
    ],
    "!(pnpm-lock).{json,yaml,md}": "pnpm run lint:prettier:base -- --write"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "optionalDependencies": {
    "graphviz": "0.0.9",
    "open": "7.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@tomer/eslint-config": "0.0.14",
    "@tomer/prettier-config": "0.0.2",
    "ava": "3.14.0",
    "ava-fast-check": "4.0.0",
    "babel-eslint": "10.1.0",
    "c8": "7.4.0",
    "eslint": "7.16.0",
    "eslint-plugin-node": "11.1.0",
    "fast-check": "2.10.0",
    "husky": "4.3.6",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "terser": "5.5.1"
  },
  "engines": {
    "node": ">= 7.6.0"
  }
}
